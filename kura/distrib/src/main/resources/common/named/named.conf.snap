// Forwarding and Caching Name Server Configuration
options {
        directory "${SNAP_COMMON}/var/named";
        bindkeys-file "${SNAP_COMMON}/etc/bind/bind.keys";
        session-keyfile "${SNAP_COMMON}/var/run/named/session.key";
        pid-file "${SNAP_COMMON}/var/run/named/named.pid";
        version "not currently available";
        forwarders {192.168.1.1;};
        forward only;
        allow-transfer{"none";};
        allow-query {172.16.1.1/24;172.16.0.1/24;};
	max-cache-ttl 30;
	max-ncache-ttl 30;
};
zone "." IN {
	type hint;
        file "${SNAP_COMMON}/var/named/named.ca";
};
include "${SNAP_COMMON}/etc/bind/named.rfc1912.zones";
